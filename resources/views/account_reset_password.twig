{% extends 'layouts/base.twig' %}

{% set title = 'Reset Your Password' %}
{% set id = 'reset-password' %}

{% block content %}
<div class="columns is-centered">
    <div class="column is-3">
        <div class="box">
            <div class="columns">
                <div class="column">
                    <div class="has-text-centered">
                        <h1 class="title">{{ app.name }}</h1>
                        <h2 class="subtitle">{{ title }}</h2>
                    </div>
                </div>
            </div>
            <div class="columns">
                <div class="column">
                    <form action="{{ '/account/reset-password'|link }}" method="post">
                        <input name="{{ csrf.name.key }}" type="hidden" value="{{ csrf.name.value }}" />
                        <input name="{{ csrf.token.key }}" type="hidden" value="{{ csrf.token.value }}" />
                        <input name="reset-token" type="hidden" value="{{ token }}" />
                        <div class="field">
                            <label class="label">Confirm your email</label>
                            <div class="control">
                                <input class="input" name="email" type="email" placeholder="Email" maxlength="191" autofocus required />
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Enter your new password</label>
                            <div class="control">
                                <input class="input" name="new-password" type="password" placeholder="New Password" minlength="6" maxlength="32" required />
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Confirm your new password</label>
                            <div class="control">
                                <input class="input" name="new-password-confirm" type="password" placeholder="Confirm New Password" minlength="6" maxlength="32" required />
                            </div>
                        </div>
                        <div class="field">
                            <div class="has-text-right">
                                <button class="button is-primary">
                                    <span class="icon">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                    <span>Reset</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
